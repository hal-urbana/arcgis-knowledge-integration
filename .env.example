# ArcGIS Enterprise Configuration
ARCGIS_PORTAL_URL=https://your-portal.arcgis.com
ARCGIS_USERNAME=your-username
ARCGIS_PASSWORD=your-password
ARCGIS_VERIFY_SSL=false

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO

# Web Server (if applicable)
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# K8s/Docker Configuration
DOCKER_ENABLED=false
K8S_NAMESPACE=default

# Timeout Settings
API_TIMEOUT=30
CONNECTION_TIMEOUT=10

# Feature Flags
ENABLE_BATCH_OPERATIONS=true
ENABLE_WEBHOOKS=true